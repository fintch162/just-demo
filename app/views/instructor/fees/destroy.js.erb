<% if params[:gpType] != "percourse" %>
	var replace_str = $("#dataStr").val();
	var generateLink;
	<% month = @fee.monthly_detail.strftime("%b-%y") %>
	
	generateLink = '<%= link_to(instructor_group_class_get_fee_data_path(@group_class,@student.id,month: month), class: "clr-red load-modal #{month}-#{@student.id}", remote: true ) do %><i class="fa fa-plus"></i>Fee<% end %>'

	$(".<%= month %>-<%= @student.id %>").replaceWith(generateLink);
	$("#<%= @student.id %>-<%= month %>").remove();
	$(".<%= month %>-<%= @student.id %>").parent().css({'background-color':'#ff0000'}).animate({'background-color':'#ffffff'},1000);
