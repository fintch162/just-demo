<% @award_progress = ["achieved"] %>
<%= title "Instructor" %>
<% if !admin_user_signed_in? %>
  <%= render "instructor/shared/login" %>
<% else %>
  <input type="hidden" value="<%= params[:id] %>" id="groupClassId" name="groupClassId"></input>
  <div class="main">
    <div class="container">
      <ul class="breadcrumb">
        <li><a href="/instructor">Home</a></li>
        <li><a href="/instructor/group-class">Group Classes</a></li>
        <li class="active"><%= @day_array[@group_class.day] +' '+ @group_class.time.strftime("%I:%M %p").to_s + " - " + (@group_class.time + @group_class.duration*60).strftime("%I:%M %p").to_s %></li>
      </ul>
      <div id="navbar-example2" class="navbar navbar-default navbar-static" role="navigation">
        <div class="navbar-header">
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-js-navbar-scrollspy">
          <span class="sr-only">
          Toggle navigation </span>
          <span class="icon-bar">
          </span>
          <span class="icon-bar">
          </span>
          <span class="icon-bar">
          </span>
          </button>
          <a class="navbar-brand" href="javascript:;">
            Class Menu
            <%# if @group_class.time.present? %>
              <%#= @day_array[@group_class.day] +' '+ @group_class.time.strftime("%I:%M %p").to_s + " - " + (@group_class.time + @group_class.duration*60).strftime("%I:%M %p").to_s %>
            <%# else %>
              <%#= @day_array[@group_class.day] %>
            <%# end %>
          </a>
        </div>
        <div class="collapse navbar-collapse bs-js-navbar-scrollspy">
          <ul class="nav navbar-nav">
            <li class="classView">
              <a href="<%= instructor_group_class_view_add_more_months_path(@group_class) %>">
                Fee View
              </a>
            </li>
            <li class="active">
              <a href="<%= instructor_sort_student_path(@group_class) %>">
                Sort Students
              </a>
            </li>
            <li class="">
              <a href="#edit_class" data-toggle="tab">
                Edit Class
              </a>
            </li>
            <li>
              <a href="#bulk_upload" data-toggle="tab">Bulk Add</a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <% if current_admin_user.is_account_activated? %>
                <a href="javascript:;" class="pull-left" id="smsSend"><i class="fa fa-envelope"></i> SMS</a>
              <% else %>
                <a class="pull-left" disabled><i class="fa fa-envelope"></i> SMS</a>
              <% end %>
              <!-- <a href="javascript:;" class="pull-left" id="sample_editable_2_new"><i class="fa fa-plus"></i> Student</a> -->
            </li>
          </ul>
        </div>
      </div>
      <div data-spy="scroll" data-target="#navbar-example2" data-offset="0" class="scrollspy-example" style="height: 100%; overflow: hidden;">
        <div class="tab-content" style="border:0px; background: #fff; padding-left: 0px;">
          <div class="tab-pane" id="fee-view">
            <%= render "/instructor/home/fee_view_search" %>
          </div>
          <div class="tab-pane active" id="active_students">
            <%= render "group_list" %>
            <%#= render "/instructor/instructor_students/active_students" %>
          </div>
          <div class="tab-pane" id="edit_class">
            <%= render "/instructor/home/edit_group_class_nav_bar" %>
          </div>
          <div class="tab-pane" id="bulk_upload">
            <%= render "/instructor/home/bulk_upload" %>
          </div>
        </div>
      </div>

      <div class="row margin-bottom-20">
        <%#= render :partial => "ac_side_bar" %>
        <div class="col-sm-12">
          <!-- <h3> -->
            <%# if @group_class.time.present? %>
              <%#= @day_array[@group_class.day] +' '+ @group_class.time.strftime("%I:%M %p").to_s + " - " + (@group_class.time + @group_class.duration*60).strftime("%I:%M %p").to_s %>
            <%# else %>
              <%#= @day_array[@group_class.day] %>
            <%# end %>
            <!-- <small><a href="<%#= edit_instructor_home_path(@group_class.id) %>" class="btn"> Edit Class</a></small> -->
          <!-- </h3> -->
                      
                      <!-- _fee_view file content places here -->

        </div>
      </div>
    </div>   
  </div>
<% end %>
