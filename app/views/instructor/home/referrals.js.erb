var attending = $("#Attending").closest('.active').text();
var attended = $("#Attended").closest('.active').text();

attending = $.trim(attending);
attended = $.trim(attended);

if(attending.indexOf("Attending") != -1){
  $('#attending_referrals').append('<%= escape_javascript(render partial: "attending_referrals", :locals => { :jobs => @jobs }) %>');
  $('a.load-more-jobs').attr('href', '<%= instructor_referrals_path page: @jobs.next_page %>');
  <% unless @jobs.next_page %>
    $('a.load-more-jobs').remove();
  <% end %>
}
if(attended.indexOf("Attended") != -1) {
  $('#attended_referrals').append('<%= escape_javascript(render partial: "attended_referrals", :locals => { :job_attended => @attended_jobs}) %>');
  $('a.load-more-attended-jobs').attr('href', '<%= instructor_referrals_path page: @attended_jobs.next_page %>');
  <% unless @attended_jobs.next_page %>
    $('a.load-more-attended-jobs').remove();
  <% end %>
}