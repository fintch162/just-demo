<table class="table table-striped table-advance table-hover">
  <thead>
    <tr>
      <th colspan="7">
        <div class="btn-group">
          <a class="btn btn-sm blue" data-toggle="dropdown" href="#">
            More
            <i class="fa fa-angle-down"></i>
          </a>
          <%= link_to "Unread", instructor_unread_conversations_path , :class => "btn btn-sm blue", remote: true %>
          <!-- <ul class="dropdown-menu">
            <li>
              <a href="#">
                <i class="fa fa-pencil"></i>
                Mark as Read
              </a>
            </li>
            <li>
              <a href="#">
                <i class="fa fa-ban"></i>
                Spam
              </a>
            </li>
            <li class="divider"></li>
            <li>
              <a href="#">
                <i class="fa fa-trash-o"></i>
                Delete
              </a>
            </li>
          </ul> -->
        </div>
        <span class="pull-right">
          <% if @inst_conversations != "Disconnected" %>
        	  <%= will_paginate @inst_conversations, :previous_label => '<i class="fa fa-angle-left"></i>', :next_label => '<i class="fa fa-angle-right"></i>', :page_links => false%>
          <% end %>
        </span>
      </th>
    </tr>
  </thead>
  <tbody>
  	<% if @inst_conversations == "Disconnected" %>
      <tr class="unread" data-messageid="1">
        <td colspan="3" class="alert alert-danger" style="background: #fff;">
          <div class="Metronic-alerts alert alert-danger fade in">You will need to setup your telerivet API in order to send or receive SMS</div>
        </td>
      </tr> 
    <% else %>
    	<% if @inst_conversations.count == 0 %>
        <tr class="unread" data-messageid="1">
          <td colspan="3" style="background: #fff;">
            <h3>No messages found!</h3>
          </td>
        </tr>
      <% else %>
      	<% @inst_conversations.each do |conversation| %>   
          <tr class="unread" data-messageid="1">
            <td class="view-message" style="width: 20px;">
              <%= link_to conversation.phone_number, instructor_conversation_path(conversation)  %>
            </td>
            <td>
              <% stdnt_cntct = StudentContact.find_by(contact: conversation.phone_number) %>
              <% if stdnt_cntct %>
                <%= stdnt_cntct.instructor_student.student_name if stdnt_cntct.instructor_student %>
              <% end %>
            </td>
            <td class="view-message">
              <%if conversation.msg_des.present? %>
                <%= link_to conversation.msg_des.truncate(100),instructor_conversation_path(conversation) %>
              <%end%>
            </td>
            <td class="view-message inbox-small-cells">
              <%  if conversation.unread_count != 0 %>
                <button class="btn red btn-xs" type="button"><%= conversation.unread_count%></button>
              <% end %>
            </td>
            <td class="hidden-xs" style="width: 20px;">
            	<%= conversation.msg_time.strftime('%d/%m/%Y')%>
            </td>
            <td class="view-message text-right">
            	<%= conversation.msg_time.strftime('%I:%M %p') %>
            </td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>