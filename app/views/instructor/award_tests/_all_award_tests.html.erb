<div class="col-sm-12">
    <table class="table sample_editable_2">
      <thead>
        <tr>
          <th style="width:30px;"></th>
          <th>Date</th>
          <th>Time</th>
          <th>Award</th>
          <th>Student(s)</th>
          <th>Test Fee</th>
          <th>Venue</th>
          <th>Cut-off</th>
          <th>Organiser</th>
          <% count = 0 %> 
        </tr>
      </thead>
      <tbody> 
        <% @award_tests.each do |award_test| %>
          <% cnt = 0 %>
          <% count = count + 1 %>
          <tr>
            <td style="width:30px;">
              <%= count %>
            </td>
            <td>
              <% if !award_test.test_date.blank? %>
                <%= link_to award_test.test_date.strftime("%e %b %Y") , instructor_award_test_path(award_test) %>
              <% end %>
            </td>
            <td>
                <%=  award_test.test_time ? award_test.test_time .strftime("%I:%M %p") : nil %> 
            </td>
            <td>
              <% if !award_test.award_id.blank? %>
                <%= award_test.award.name %> 
              <% end %>
            </td>
            <% @instructor_student_awards = InstructorStudentAward.where(:award_id => award_test.award_id, :award_test_id => award_test.id ).where(:instructor_student_id => @ins_student_id) %>
            <% @instructor_student_awards.each do |ins| %>
              <% cnt = cnt + 1 %>
            <% end %>
            <td >  
              <%= cnt %>
            </td>
            <td>
              $<%= format('%.2f', award_test.test_fee) if award_test.test_fee.present? %>
            </td>
            <td>
              <% if !award_test.venue_id.blank? %>
                <%= Venue.find(award_test.venue_id).name %>
              <% end %>  
            </td>
            <td>
              <%= award_test.cut_off_date.strftime("%d/%m/%y") if award_test.cut_off_date.present? %>
            </td>
            <td>
              <% if !award_test.assessor.blank? %>
                <%= Instructor.find(award_test.assessor).name %>
              <% end %>  
            </td>
          </tr>
        <% end %>                                      
      </tbody>
    </table>
</div>
<style type="text/css">
 .sample_editable_2{
    width: 100% !important;
  }
  .table-scrollable{
    border: none !important;
  }
</style>
<script type="text/javascript">
 $('.sample_editable_2').DataTable( {
    responsive: true,
    "bPaginate": false,
    "info":     false,
    'filter': false
   });
</script>

