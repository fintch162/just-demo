<% @day_array = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"] %>
var content = ""; 
<% @instructor_student.group_classes.each do |p| %>
  content += '<div class="col-sm-8 col-xs-12 padding-top-10"><div class="row"><div class="col-xs-4 text-right text-muted">Class</div><div class="col-xs-8"><%= @day_array[p.day] +' '+ p.time.strftime("%l:%M %P")%></div></div><div class="row "><div class="col-xs-4 text-right text-muted">Instructor</div><div class="col-xs-8"><%= p.instructor.name%></div></div><div class="row "><div class="col-xs-4 text-right text-muted">Fee</div><div class="col-xs-8"><%= @instructor_student.fee.nil? ? "-" : "$" + @instructor_student.fee.to_s %></div></div></div>';
<% end %>

$(".class_details").html(content);
$(".change_group_class").hide();
$(".class_details").show();
window.location.reload();