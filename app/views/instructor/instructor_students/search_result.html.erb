<% if !admin_user_signed_in? %>
  <%= render "instructor/shared/login" %>
<% else %>
  <div class="main">
    <div class="container">
      <ul class="breadcrumb">
        <li><a href="/instructor">Home</a></li>
        <li class="active">Search Result</li>
      </ul>
      <div class="row margin-bottom-40">
        <%#= render :partial => "instructor/home/ac_side_bar" %>
        <div class="col-sm-12">
          <h1>Search Result</h1>
        </div>
        <div class="col-sm-12">
        	<%= form_tag instructor_search_result_path, :method => 'get',remote: true, :html => { :class=> "form-horizontal" } do %>          
	          <div class="input-group" style="height: 55px important;">
	            <%= text_field_tag :search, params[:search],:autofocus => "autofocus",:placeholder =>"Search" ,:class =>"form-control"%>
              <%#= hidden_field_tag :student_name ,params[:search] %>
	            <span class="input-group-btn" style="background-color: #44B6AE;">
	            <%= submit_tag "Search", :name => nil, class: 'btn', :style => "background-color: #44B6AE;"%> 
	            <i class="m-icon-swapright m-icon-white" style="margin: 10px 0 10px 0"></i>
	            </span>       
	          </div>
        	<% end %>
        </div>
        <div class="col-sm-12 students">
        	<%= render 'search_result_students_list' %>
        </div>
      </div>
    </div>
  </div>
<% end %>



