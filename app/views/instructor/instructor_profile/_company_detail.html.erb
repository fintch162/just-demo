<%= form_for @instructor, :url => instructor_update_profile_path ,:html => { :multipart => true, :class=> "form-horizontal", :id => "instructor_profile" } do |f| %>

  <div class="input required stringish form-group">
    <label class="col-md-3 control-label" for="">Company Name</label>
    <div class="col-md-4">
      <%= f.text_field :company_name, :class => "form-control" %>
    </div>  
  </div>

  <input type="hidden" value="cmpSetting" name="cmpSetting" />

  <div class="string input required stringish form-group" id="instructor_name_input">
    <label class=" col-md-3 control-label" for="instructor_name">Company Logo</label>
    <div class="col-md-4">
      <div class="fileinput fileinput-new" data-provides="fileinput">
        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
          <% if current_admin_user.company_logo? %>
            <%= image_tag(current_admin_user.company_logo) %>
          <% else %>
            <img src="/assets/no_image.gif" alt="", class="img-responsive" style="width:200px; height:150px;" />
          <% end %>
        </div>
        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
        </div>
        <div>
          <span class="btn default btn-file">
          <span class="fileinput-new">
          Select image </span>

          <span class="fileinput-exists">
          Change </span>
          <input type="file" id="instructor_company_logo" name="instructor[company_logo]">
          </span>
          <a href="#" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
          <a href="#" class="btn red removeCompanyLogo" data-dismiss="fileinput"> Remove </a>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group fluid">
    <div class="col-md-offset-3 col-md-9">
      <input class="btn btn-primary" name="commit" type="submit" value="Update company detail" id="instrutor_submit">
      <%= link_to "Cancel",  instructor_profile_path, :class=> "btn default" %>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $("#instructor_company_logo").change(function(event) {
    $(".removeCompanyLogo").hide();
  });
  $(".removeCompanyLogo").click(function(event) {
    $(".fileinput-new").find('img').attr('src', '/assets/missing-logo.gif');
    $(this).hide();
  });
</script>