    <div class="string input required stringish form-group" id="instructor_name_input">
      <label class=" col-md-3 control-label" for="instructor_name">Name<abbr title="required">*</abbr></label>
      <div class="col-md-4">
        <%= f.text_field :name, :class => "form-control", :required => true %>
      </div>  
    </div>
    <div class="email input required stringish form-group" id="instructor_email_input">
      <label class=" col-md-3 control-label" for="instructor_email">Email<abbr title="required">*</abbr></label><span class="form-wrapper">
      <div class="col-md-4">
        <%= f.email_field :email, :class=>"form-control", :maxlength=>"255" , :required => true %>
      </div>
    </div>
    <div class="string input required stringish form-group" id="instructor_mobile_input">
      <label class=" col-md-3 control-label" for="instructor_mobile">Mobile<abbr title="required">*</abbr></label>
      <div class="col-md-4">
        <%= f.text_field :mobile, :class => "form-control", :required => true %>
      </div>  
    </div>
    <div class="form-group">
      <label class=" col-md-3 control-label" ><%= f.label :gender, "Gender" %></label>
      <div class="col-md-4" >
        <div class="input-group" id="gender">
          <% ["Male", "Female"].each do |item| %>
            <label>
              <%= f.radio_button :gender, item, :class=>"toggle" ,:required => true, :id => "#{item}" %>
              <%= item %>
            </label>
          <% end %>
        </div>
      </div>  
    </div>
    <div class="string input optional stringish form-group" id="instructor_short_name_input">
      <label class="col-md-3 control-label" for="instructor_short_name">Short name</label>
      <div class="col-md-4">
        <%= f.text_field :short_name, :class => "form-control", :required => true %>
      </div>  
    </div>

    <div class="string input required stringish form-group" id="instructor_name_input">
      <label class=" col-md-3 control-label" for="instructor_name">About Me</label>
      <div class="col-md-4">
        <%= f.text_area :about_me, :class => "form-control", :rows=>"10"%>
      </div>  
    </div>
    <div class="form-group fluid">
      <div class="col-md-offset-3 col-md-9">
        <input class="btn btn-primary" name="commit" type="submit" value="Update Instructor" id="instrutor_submit">
        <%= link_to "Cancel",  instructor_profile_path, :class=> "btn default" %>
      </div>
    </div>
  </div>
<% end %>