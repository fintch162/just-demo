<%= form_for @instructor, :url => instructor_update_profile_path ,:html => { :multipart => true, :class=> "form-horizontal", :id => "instructor_profile" } do |f| %>
  <input type="hidden" value="pwdSetting" name="pwdSetting" />

  <div class="password input required stringish form-group" id="instructor_password_input">
    <label class="  col-md-3 control-label" for="instructor_password">Password</label>
    <div class="col-md-4">
      <%= f.password_field :password, :class => "form-control", :minlength => 8 %>
    </div>  
  </div>
  <div class="password input optional stringish form-group" id="instructor_password_confirmation_input">
    <label class="  col-md-3 control-label" for="instructor_password_confirmation">Password confirmation</label>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, :class => "form-control", :onblur=>"validate_password();", :minlength => 8 %>
      <div class="error1" style="display:none;color: #a94442;font-weight: 400;font-size: 14px;">Please enter same value again</div>  
    </div>  
  </div>
  <div class="form-group fluid">
    <div class="col-md-offset-3 col-md-9">
      <input class="btn btn-primary" name="commit" type="submit" value="Update Password" id="instrutor_submit">
      <%= link_to "Cancel",  instructor_profile_path, :class=> "btn default" %>
    </div>
  </div>
<% end %>