.row
  .col-md-12
    .table-scrollable
      %table.table.table-striped.table-bordered.table-advance.table-hover
        %thead
          %tr
            %th
              Date
            %th
              Job Ref
            %th
              Status
            %th
              Class Type
            %th
              Age Group
            %th
              Location
            %th
              Name
            %th
              Invoice
        %tbody
          - @jobs.each do |job|
            %tr
              %td
                = job.created_at.strftime("%d-%b")
              %td
                = link_to job.id, manage_job_path(job)
              %td
                = job.job_status
              %td.hidden-xs
                - if job.class_type.present?
                  - class_type = ClassType.find(job.class_type).title
                  = class_type
              %td
                - age_group = AgeGroup.find_by_id(job.age_group)
                = age_group.title unless age_group.nil?
              %td
                - Venue.all.each do |v|
                  - if v.id == job.venue_id
                    = v.name
              %td
                = job.lead_name
              / %td
              /   = link_to "View", manage_job_path(job), :class => "btn default btn-xs green-stripe"
              %td
                - if job.invoices.count == 0
                - elsif job.invoices.count == 1
                  .btn-group
                    %button#btnGroupVerticalDrop5.btn.yellow.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
                      = job.invoices.first.invoice_number
                      %i.fa.fa-angle-down
                    %ul.dropdown-menu{"aria-labelledby" => "btnGroupVerticalDrop5", role: "menu"}
                      %li
                        = link_to "View Invoice", manage_invoice_path(job.invoices.first)
                      %li
                        %a{href: "#"}
                          Add payment
                      %li
                        %a{href: "#"}
                          Delete Invoice
                - elsif job.invoices.count > 1
                  .btn-group
                    %button#btnGroupVerticalDrop5.btn.yellow.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
                      Dropdown
                      %i.fa.fa-angle-down
                    %ul.dropdown-menu{"aria-labelledby" => "btnGroupVerticalDrop5", role: "menu"}
                      %li
                        %a{href: "#"}
                          View Invoice
                      %li
                        %a{href: "#"}
                          Add payment
                      %li
                        %a{href: "#"}
                          Delete Invoice