$('#job_day_of_week').val(<%= @group_class.day %>);
$('#job_day_of_week').trigger('change');
$('#job_class_time').val('<%= @group_class.time.strftime("%-I:%M %p") %>');
$('#job_duration').val(<%= @group_class.duration %>);
$('#job_fee_type_id').val(<%= @group_class.fee_type_id %>);
$('#job_par_pax').val(<%= @group_class.fee %>);
$('#job_instructor_id').val(<%= @group_class.instructor_id %>);
<% if @group_class.fee_type_id == FeeType.find_by(name: "per course").id %>
	$('#job_lesson_count').val(<%= @group_class.lesson_count %>);
<% end %>
$('#job_referral').val('');
<% fee_total = @group_class.fee * @job.students.count %>
$('#job_fee_total').val(<%= fee_total > 0 ? fee_total : @group_class.fee %>);
