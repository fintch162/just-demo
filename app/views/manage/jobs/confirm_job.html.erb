<div class="row">
  <div class="col-md-12">
    <div class="portlet box green">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-user"></i>Confirmed Jobs
        </div>
      </div>
      <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>
                Start Date
              </th>
              <th>
                Job Ref
              </th>
              <th>
                Client
              </th>
              <th>
                Insturctor
              </th>
              <th>
              </th>
            </tr>
          </thead>
           <tbody>
            <% @jobs.each do |job| %>
              <tr>
                <td><%= job.start_date.strftime("%d %b %Y") %></td>
                <td><%= link_to "Ref #{job.id}", manage_job_path(job)%></td>
                <td><%= job.lead_name %></td>
                <td><%= job.instructor.name %></td>
                <td>
                  <%= link_to "Invoice", manage_confirm_invoice_path(job), :class => "btn default", :remote => true,:"data-toggle"=>"modal",:"data-target"=>"#basic"%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>  
<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true">
</div>

