= hidden_field_tag :customer_id, :value => "#{params[:to_number]}"
%h3.page-title
  SMS
  %small
    from telerivet
.row.inbox
  .col-md-2
    %ul.inbox-nav.margin-bottom-10
      %li.compose-btn
        %a.btn.default{"data-toggle" => "modal", href: "#responsive"}
          %i.fa.fa-edit
          New SMS
      %li.inbox.active
        = link_to "Conversations", manage_messages_path , :class => "btn"
        %b
      %li.sent
        = link_to "Incoming", manage_incoming_messages_path(:conversation => true, :c_p_id => @contact_id) , :class => "btn",  :remote => true
        %b
      %li.draft
        = link_to "Outgoing", manage_outgoing_messages_path(:conversation => true, :c_p_id => @contact_id) , :class => "btn", :remote => true
        %b
      %li.trash
        = link_to "Failed", manage_incoming_messages_path(:conversation => true, :c_p_id => @contact_id), :class => "btn", :remote => true
        %b
  .col-md-10.parent_incomming
    .inbox-header
      %h1.pull-left
        Conversations of #{@contact_name}
      %form.form-inline.pull-right{action: "index.html"}
        .input-group.input-medium
          %input.form-control{placeholder: "Search SMS", type: "text"}/
          %span.input-group-btn
            %button.btn.green{type: "submit"}
              %i.fa.fa-search
    .inbox-loading{style: "display: none;"}
      Loading...
    .inbox-content.conversation_tbody
      %table.table.table-striped.table-advance.table-hover{style: "display: none;"}
        %thead
          %tr
            %th{:colspan => "3"}
              .checker
                %span
                  %input.mail-checkbox.mail-group-checkbox{:type => "checkbox"}/
              .btn-group
                %a.btn.btn-sm.blue{"data-toggle" => "dropdown", :href => "#"}
                  More
                  %i.fa.fa-angle-down
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-pencil
                      Mark as Read
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-ban
                      Spam
                  %li.divider
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-trash-o
                      Delete
            %th.pagination-control{:colspan => "3"}
              %span.pagination-info
                / 1-30 of 789
              %a.btn.btn-sm.blue
                %i.fa.fa-angle-left
              %a.btn.btn-sm.blue
                %i.fa.fa-angle-right
        %tbody        
      - init_class = Test.new
      .portlet
        #chats.portlet-body
          - if !@conversastions_messages["next_marker"].blank?
            = link_to "Load older", manage_load_more_messages_path(:phone => @c_phone_number), :class => "load_more", :remote => true, :style => "left: 50%; bottom: 20%; font-size: 15px; position: relative; "
          %ul.chats
            %span{:id => "load_more"}
            - @conversastions_messages["data"].reverse.each do |message|
              - if message["direction"] == "incoming"
                %li.in
                  %img.avatar.img-responsive{alt: "", src: "/assets/avatar.png"}/
                  .message
                    %span.arrow
                    - name = init_class.get_name_from_number(message["from_number"], @arr_contact)
                    %a.name{href: "#"}
                      = name
                    %span.datetime
                      at
                      = Time.at(message["time_created"]).strftime("%b %d,%Y %I:%M %P")
                    %span.body
                      = simple_format(message["content"]).html_safe if !message["content"].blank?
              - else
                %li.out
                  %img.avatar.img-responsive{alt: "", src: "/assets/avatar.png"}/
                  .message
                    %span.arrow
                    %a.name{href: "#"}
                      = message["from_number"]
                    %span.datetime
                      at 
                      = Time.at(message["time_created"]).strftime("%b %d,%Y %I:%M %P")
                    %span.body
                      = simple_format(message["content"]).html_safe if !message["content"].blank?
= render :partial => "manage/messages/new_message"