<div class="row">
  <div class="col-md-12">
    <% if alert %>
    <div class="Metronic-alerts alert alert-danger fade in"><button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button><%= alert %></div>
    <% end %>
    <div class="portlet box green">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-user">></i>
          Invoices 
        </div>
        <div class="pull-right">
              <a class="btn btn-sm blue" href="<%= manage_invoice_prev_page_path %>" data-remote="true" id="prev">
                <i class="fa fa-angle-left"></i>
              </a>
              <a class="btn btn-sm blue" href="<%= manage_invoice_next_page_path %>" data-remote="true" id="next">
                <i class="fa fa-angle-right"></i>
              </a>
          </div> 
      </div>

      <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
            <tr>
              <th>Invoice</th>
              <th>Clent Name</th>
              <th>Date</th>
              <th>Total</th>
              <th>Status</th>
              <th>Job Ref</th>
              <th>Job Status</th>
              <th>Job Total</th>
              <th>Job Refferal</th>
              <!-- <th></th> -->
            </tr>
          </thead>
          <tbody>
            
            <% @invoices.each do |inv| %>
              <% if inv.class.to_s == "Hash" %>
                <tr class="odd gradeX">
                  <td>
                    <%= link_to inv["number"], inv["links"]["view"], :target => "_blank"%>
                  </td>
                  <td>
                     <%= inv["organization"] %>   
                  </td>
                  <td>
                    <%= inv["updated"].to_date.strftime("%d/%m/%Y") %>
                  </td>
                  <td>
                     <%= inv["amount"] %>   
                  </td>
                  <td>
                    <%= inv["status"] %>  
                  </td>
                  <td>
                    <%= link_to "REF #{inv["po_number"]}",manage_job_path(inv["po_number"]) %>
                  </td>
                  <td>
                    <% @m = Job.all.pluck(:id) %>
                    <% if @m.include?(inv["po_number"].to_i)%>
                      <%= Job.find(inv["po_number"]).job_status %>
                    <%end %> 
                  </td>
                  <td>
                    <% @m = Job.all.pluck(:id) %>
                    <% if @m.include?(inv["po_number"].to_i)%>
                      <% if !Job.find(inv["po_number"]).fee_total.nil? %>
                        $ <%= Job.find(inv["po_number"]).fee_total %>
                      <% end %>
                    <%end %> 
                  </td>
                  <td>
                    <% @m = Job.all.pluck(:id) %>
                    <% if @m.include?(inv["po_number"].to_i)%>
                      <% if  !Job.find(inv["po_number"]).referral.nil? %>
                        $ <%= Job.find(inv["po_number"]).referral %>
                      <% end %>
                    <%end %>
                  </td>
                  <!-- <td>
                    <%#= link_to "Edit", inv["links"]["edit"], :target => "blank" %>
                  </td> -->
                </tr>
              <% else %>

              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
  
  jQuery(document).ready(function() { 
    // TableManaged.init();
  });

</script>
