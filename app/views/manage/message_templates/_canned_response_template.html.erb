<div class="portlet-body">
  <div class="tabbable-custom nav-justified">
    <div class="tab-content">
      <div class="tab-pane active" id="tab_1_1_1">
        <div class="portlet box">
          <div class="portlet-body form">
            <%= select_tag 'canned_response', options_from_collection_for_select(CannedResponse.all, "id", "title"), :class=>"form-control canned_response margin-bottom-10" , :prompt => "Add New" %>
            <%= form_for [:manage, @canned_response] do |f| %>
              <%= hidden_field_tag :canned_title  %>
              <div class="form-body">
                <div class="form-group">
                  <div class="checkbox-list">
                    <label>
                      Title
                    </label>
                    <%= f.text_field :title, :class => "form-control", :placeholder => "Canned message title" %>
                  </div>
                </div>
                <div class="form-group" id="canned_description">
                  <label>Message</label>
                  <%= f.text_area :description, :class => "form-control", :rows => 5 %>
                </div>
                <div class="left">
                  <button class="btn green" type="submit">Save</button>
                  <button class="btn default" type="button">Cancel</button>
                  <div class="canned-delete" id="canned-delete"></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 
<div class="modal fade canned-delete-modal" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
  <div class="modal-dialog modal-sm" role="document" style="margin-top: 7%;">
    <div class="modal-content">
      <div class="modal-header">
       <div class="row"><h3 style="text-align: center;">Confirm Delete ?</h3></div>
      </div>
      <div class="modal-body">
        <div class="row">
        </div>
      </div>
    </div>
  </div>
</div>
