 <h3 class="page-title">
  SMS
  <small>
    from telerivet
  </small>
</h3>
<div class="row inbox">
  <div class="col-md-2">
    <ul class="inbox-nav margin-bottom-10">
      <li class="compose-btn">
        <a class="btn default" data-toggle="modal" href="#responsive">
          <i class="fa fa-edit"></i>
          New SMS <%= @conversation.count %>
        </a>
      </li>
      <li class="inbox active">
        <%= link_to "Conversations", manage_messages_path , :class => "btn" %>
        <b></b>
      </li>
      <li class="sent">
        <%= link_to "Incoming", manage_db_incoming_message_path , :class => "btn"%>
        <b></b>
      </li>
      <li class="draft">
        <%= link_to "Outgoing", manage_db_outgoing_message_path, :class => "btn"%>
        <b></b>
      </li>
      <li class="trash">
        <%= link_to "Failed", manage_incoming_messages_path, :class => "btn", :remote => true %>
        <b></b>
      </li>
    </ul>
  </div>
  <div class="col-md-10 parent_incomming">
    <div class="inbox-header">
      <h1 class="pull-left">
        <% if @phone_number.include?('+') %>
          <% if @phone_number.include?("^") %>
            <% i = Instructor.find_by_mobile(@phone_number[4..-1]) %>
            <%= i.name.capitalize unless i.nil? %>
            <%= @phone_number[4..-1] unless !i.nil? %>
          <% else %>
            <% i = Instructor.find_by_mobile(@phone_number[3..-1]) %>
            <%= i.name.capitalize unless i.nil? %>
            <%= @phone_number[3..-1] unless !i.nil? %>
          <% end %>
        <% else %>
          <% if @phone_number.include?("^") %>
            <% i = Instructor.find_by_mobile(@phone_number.gsub('^', '')) %>
            <%= i.name.capitalize unless i.nil? %>
            <%= @phone_number.gsub('^', '') unless !i.nil? %>
          <% else %>
            <% i = Instructor.find_by_mobile(@phone_number) %>
            <%= i.name.capitalize unless i.nil? %>
            <%= @phone_number unless !i.nil? %>
          <% end %>
        <% end %>
      </h1>
      <form action="index.html" class="form-inline pull-right">
        <div class="input-group input-medium">
          <input class="form-control" placeholder="Search SMS" type="text"></input>
          <span class="input-group-btn">
            <button class="btn green" type="submit">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      </form>
    </div>
    <div class="inbox-loading" style="display: none;">
      Loading...
    </div>
    <div class="inbox-content col-sm-6 col-sm-push-6">
      <%= form_tag(manage_send_new_message_from_conversation_path, :class => "conversation", :id => "conversation") do %>
        <div class="row">
          <div class="col-md-12">
            <%= hidden_field_tag :to_number, @phone_number.gsub('^','')%>
            <div class="form-group">
              <%= text_area_tag :message_description,nil ,:class => "form-control", :rows => 5, :placeholder => "Enter message here..", :required => true %>
            </div>
            <div class="form-group">
              <%= submit_tag "Send SMS", :class => "btn green pull-right" %>
              <% if notice %>
                <% if notice != "Signed in successfully." %>
                  <span class="pull-right" style="margin-top: 8px; padding-right:5px;"><%= flash[:notice] %></span>
                <% end %>
              <% end %>
              <% if @canned_responses.count > 0 %>
                <div class="btn-group pull-left">
                  <button type="button" class="btn blue">Canned</button>
                  <button type="button" class="btn blue dropdown-toggle" data-toggle="dropdown" style="height: 34px;"><i class="fa fa-angle-down"></i></button>
                  <div class="dropdown-menu hold-on-click dropdown-radiobuttons" role="menu">
                    <% @canned_responses.each do |p| %>
                      <label>
                        <div class="radio">
                          <span class="">
                            <input name="canned_template" class="canned_template" type="radio" value="<%= p.id %>">
                          </span>
                        </div>
                         <%= p.title.capitalize if p.title.present? %>
                      </label>
                    <% end %>
                    <label>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="inbox-content conversation_tbody col-sm-6 col-sm-pull-6">
      <table class="table table-striped table-advance table-hover" style="display: none;">
        <thead>
          <tr>
            <th colspan="3">
              <div class="checker">
                <span>
                  <input class="mail-checkbox mail-group-checkbox" type="checkbox">/</input>
                </span>
              </div>
              <div class="btn-group">
                <a class="btn btn-sm blue" data-toggle="dropdown" href="#">
                  More
                  <i class="fa fa-angle-down"></i>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="#">
                      <i class="fa fa-pencil"></i>
                      Mark as Read
                    </a>
                  </li>
                  <li>
                    <a href="#">
                      <i class="fa fa-ban"></i>
                      Spam
                    </a>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <a href="#">
                      <i class="fa fa-trash-o"></i>
                      Delete
                    </a>
                  </li>
                </ul>
              </div>
            </th>
            <th class="pagination-control" colspan="3">
              <span class="pagination-info">
              </span>
              <a class="btn btn-sm blue">
                <i class="fa fa-angle-left"></i>
              </a>
              <a class="btn btn-sm blue">
                <i class="fa fa-angle-right"></i>
              </a>
            </th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      <div class="portlet">
        <div class="portlet-body" id="chats">
          <ul class="chats">
            <span id="load_more"></span>
            <% @messages.each do |message| %>
              <% if message.direction.downcase == "incoming" %>
                <% if message.to_number.include?(@telerivet_phone) %>
                  <li class="in">
                    <img class="avatar img-responsive" src="/assets/avatar.png"/>
                    
                    <div class="message">
                      <span class="arrow"></span>
                      <!-- <a class="name" href="#">
                        <%#= message.from_number.gsub('^','') if !message.from_number.blank? %>
                      </a> -->
                      <span class="datetime">
                        <!-- at -->
                        <%= message.time_created.strftime('%d %b %Y %I:%M %p') %>
                        <% if message.status == "sent" %>
                          <%= link_to " Mark as Unread", manage_set_unread_path(message),:style => "color: #D3071E;" %>
                        <% else %>
                          <%= link_to " Mark as Unread", manage_set_unread_path(message),:style => "color: #D3071E;" %>
                        <% end %>
                      </span>
                      <span class="body" style>
                        <% if !message.message_description.blank? %>  
                          <% if message.message_description.include?("REF") %>
                            <% @ref_number = "" %>
                            <% message.message_description.lines.each do |str| %>
                              <% if str.include?("REF") %>
                                <% str = str.remove("REF ") %>
                                <% str = str.remove("\n") %>
                                <% @ref_number = str %>
                              <% end %>
                            <% end %>
                            <% if @ref_number != "" %>
                             <%# @job = Job.where(:referral => @ref_number) %>
                              <%# if @job.count > 0 %>
                                <%= simple_format(message.message_description.sub("REF "+ @ref_number, '<a href="'+manage_job_path(@ref_number)+ '"> REF '+@ref_number+'</a><br/>')).html_safe %>
                              <%# else %>
                                <%#= message.message_description.html_safe if !message.message_description.blank? %>
                              <%# end %>
                            <% else %>
                              <%= simple_format(message.message_description).html_safe if !message.message_description.blank? %>
                            <% end %>
                          <% else %>
                            <%= message.message_description.html_safe if !message.message_description.blank? %>
                          <% end %>
                        <% end %>
                      </span>
                    </div>
                  </li>
                <% end %>
              <% else %>
                <% if message.from_number.include?(@telerivet_phone) %>
                  <li class="out">
                    <img class="avatar img-responsive" src="/assets/avatar.png"/>
                    Sent by <%= message.coordinator.name.capitalize unless message.coordinator_id.blank? %>
                    <div class="message" style="background: <%= message.status == 'sent' ? '#dff0d8' : '#fcf8e3' %>;">
                      <span class="arrow"></span>
                      <!-- <a class="name" href="#">
                        <%#= message.to_number.gsub('^','') %>
                      </a> -->
                      <span class="datetime">
                        <!-- at --> 
                        <%= message.time_created.strftime('%d %b %Y %I:%M %p') %><%= link_to " Mark as Unread", manage_set_unread_path(message), :style => "color: #D3071E;" %>
                      </span>
                      <span class="body">
                        <% if !message.message_description.blank? %>
                          <% if message.message_description.include?("REF") %>
                            <% @ref_number = "" %>
                            <% message.message_description.lines.each do |str| %>
                              <% if str.include?("REF") %>
                                <% str = str.remove("REF ") %>
                                <% str = str.remove("\n") %>
                                <% @ref_number = str %>
                              <% end %>
                            <% end %>
                            <% if @ref_number != "" %>
                             <%# @job = Job.where(:referral => @ref_number) %>
                              <%# if @job.count > 0 %>
                                <%= simple_format(message.message_description.sub("REF "+ @ref_number, '<a href="'+manage_job_path(@ref_number)+ '"> REF '+@ref_number+'</a>')).html_safe %>
                              <%# else %>
                                <%#= message.message_description.html_safe if !message.message_description.blank? %>
                              <%# end %>
                            <% else %>
                              <%= simple_format(message.message_description).html_safe if !message.message_description.blank? %>
                            <% end %>
                          <% else %>
                            <%= simple_format(message.message_description).html_safe if !message.message_description.blank? %>
                          <% end %>
                        <% end %>
                      </span>
                    </div>
                  </li>
                <% end %>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%#= render :partial => "manage/messages/new_message" %>
<script>
  $(document).ready(function(){
    $(".canned_template").click(function(event) {
      var canned_response_template = $(this).val();
      $.ajax({
        url: '/manage/get_canned_tmp',
        type: 'POST',
        data: { choosenTemplate: canned_response_template }
      })
      .done(function(data) {
        data = $.parseJSON(data)
        var description = data["description"]
        $("#message_description").val(description)
      });
    });
    $('#conversation').validate({
      rules: {
        message_description: {
          required: true
        }
      }
    });
  });
</script>
<style>
 .replace_str { white-space: pre-wrap; }
 .chats li.out .message .body { text-align: left !important; }
</style>