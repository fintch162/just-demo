$modal = $('.modal');
$modal.modal('hide');	
if($('.delete_button_<%= @group_class.id %>').is(":visible")){
	$(".remove_group_class_from_instructor_<%= @group_class.id %>").fadeIn().addClass("danger")
	                       .delay(3000)
	                       .queue(function() {
	                           $(this).fadeOut();
	                           $(this).dequeue();
	                       });

}
else{
$('.toRemoveGp-<%= @group_class.id %>').fadeOut('fast');
$(".group_class-<%= @group_class.id %>").fadeIn().addClass("danger")
                       .delay(3000)
                       .queue(function() {
                           $(this).fadeOut();
                           $(this).dequeue();
                       });
}