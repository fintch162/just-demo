= title "Venues Index" 

.row
  .col-md-12
    / BEGIN EXAMPLE TABLE PORTLET
    .portlet.box.green
      .portlet-title
        .caption
          %i.fa.fa-edit>
          Manage Venue
        .tools
          %a.collapse{:href => "javascript:;"}
          %a.config{"data-toggle" => "modal", :href => "#portlet-config"}
          %a.reload{:href => "javascript:;"}
          %a.remove{:href => "javascript:;"}
      .portlet-body
        .table-toolbar
          .btn-group
            %button#sample_editable_2_new.btn.green
              Add New
              %i.fa.fa-plus
        %table#sample_editable_2.table.table-striped.table-hover.table-bordered
          %thead
            %tr
              %th
                Title
              %th
                Edit
              %th
                Delete
          %tbody
            - @venues.each do |venue|
              %tr{:id => venue.id}
                %td
                  = venue.name
                %td
                  = link_to "Edit", "#", :class => "edit" ,:id=>"#{venue.id}"
                %td
                  = link_to "Delete", "#", :class => "delete" ,:id=>"del_#{venue.id}"
    / END EXAMPLE TABLE PORTLET
:javascript
  jQuery(document).ready(function() {       
    Metronic.init(); // init metronic core components
    venueTableEditable.init();
  });