<div class="portlet-body">
  <table class="table table-striped table-bordered table-hover" id="sample_3" >
    <thead>
      <tr>
        <th>Date</th>
        <th>Job Ref No</th>
        <th>Status</th>
        <th>Balance</th>
        <th>Referral</th>
        <th>Total</th>
        <th>Payment Method</th>
        <th>Status</th>
        <th>Invoice</th>
      </tr>
    </thead>
     <tfoot>
      <tr>
        <th colspan="4" style="text-align:right">Total:</th>
        <th></th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </tfoot>
    <tbody id="award_test_table" >
      
      <% @manual_payments.each do |manual_payment| %>
        <%= content_tag_for :tr, manual_payment do %>

          <td><%= manual_payment.payment_date %></td>
          <td><%= manual_payment.job_id  %></td>
          <td><%= manual_payment.job_status  %> </td>
          <td><%= manual_payment.balance  %> </td>
          <td><%= manual_payment.referral  %> </td>
          <td><%= manual_payment.job.fee_total if manual_payment.job %> </td>
          <td><%= manual_payment.payment_method  %> </td>
          <td><%= manual_payment.committed ? 'Committed' : 'Uncommitted'  %> </td>
          <td><%= manual_payment.job.invoices.count > 0 ? manual_payment.job.invoices.last.freshbooks_invoice_id : '-'  %> </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>