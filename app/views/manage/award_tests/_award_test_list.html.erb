<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Transfer to another Award Test</h4>
    </div>
    <div class="modal-body">
      

      <table class="table table-striped table-bordered table-hover" id="sample_2" >
          <thead>
            <tr>
              <th style="width:30px;"></th>
              <th>Award Test Id</th>
              <th>Venue</th>
              <th>Date</th>
              <th>Time</th>
              <th>Vacancy</th>
            </tr>
          </thead>
          <tbody id="award_test_table"  data-update-url="<%= sort_manage_award_tests_path %>">
            <% if @award_tests.count > 0 %>
            <% @award_tests.each do |award_test| %>
              <%= content_tag_for :tr, award_test do %>
                <td style="width:30px;" >
                  <input type="radio" name="award_test_id" value="<%= award_test.id %>" class="award_test_id" />
                </td>
                <td><%= award_test.id %></td>
                <td>
                  <% if !award_test.venue_id.blank? %>
                    <%= Venue.find(award_test.venue_id).name %>
                  <% end %>  
                </td>
                <td>
                  <% if !award_test.test_date.blank? %>
                    <%= award_test.test_date.strftime("%e %b %y")  %>
                  <% end %>
                </td>
                <td><%= award_test.test_time ? award_test.test_time.strftime("%-I:%M%P") : nil %> </td>
                <td><% @apply_student=InstructorStudentAward.where(:award_test_id=> award_test.id,:award_id=> award_test.award_id).count %><%= (award_test.total_slot-@apply_student).abs  %> of <%= award_test.total_slot %></td>
              <% end %>
            <% end %>
            <% else %>
            <tr>
              <td colspan="5"> No record found!</td>
            </tr>
            <% end %>
          </tbody>
        </table>



    </div>
    <div class="modal-footer">
      <center>
      <%= form_tag(manage_transfer_student_path) do %>
        <%= hidden_field_tag 'id', @instructor_student_award.id %>
        <%= hidden_field_tag 'students_id',params[:student_list] %>
        <%= hidden_field_tag 'award_id',params[:award_id] %>
        <%= hidden_field_tag 'award_test_id' %>
        <%= hidden_field_tag 'award_test_id_old', @award_test_id %>
        <%= submit_tag 'Transfer', class: 'btn btn-primary', id: 'transfer', disabled: 'disabled' %>
      <% end %>
      </center>
    </div>
  </div><!-- /.modal-content -->
</div>
<script type="text/javascript">
$(document).ready(function(){
  $(document).on("change",".award_test_id",function(){
    $('#transfer').removeAttr('disabled');
    $('#award_test_id').val(($(this).val()));
  });
});
