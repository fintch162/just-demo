%h1 Listing bank_details

%table
  %thead
    %tr
      %th Bank name
      %th Account number
      %th Created at
      %th Updated at
      %th
      %th
      %th
      
  %tbody
    - @bank_details.each do |bank_detail|
      %tr
        %td= bank_detail.bank_name
        %td= bank_detail.account_number
        %td= bank_detail.created_at
        %td= bank_detail.updated_at
        %td= link_to 'Show', bank_detail
        %td= link_to 'Edit', edit_bank_detail_path(bank_detail)
        %td= link_to 'Destroy', bank_detail, :method => :delete, :data => { :confirm => 'Are you sure?' }

