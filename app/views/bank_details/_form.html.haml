= form_for @bank_detail do |f|
  - if @bank_detail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bank_detail.errors.count, "error")} prohibited this bank_detail from being saved:"
      %ul
        - @bank_detail.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :bank_name
    = f.text_field :bank_name
  .field
    = f.label :account_number
    = f.number_field :account_number
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :updated_at
    = f.datetime_select :updated_at
  .actions
    = f.submit 'Save'
