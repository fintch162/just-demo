!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title 
      MatchMaker -
      = yield(:title)
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "Metronic Shop UI description", :name => "description"}
    %meta{:content => "Metronic Shop UI keywords", :name => "keywords"}
    %meta{:content => "keenthemes", :name => "author"}
    %meta{:content => "on", "http-equiv" => "cleartype"}
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Pathway+Gothic+One|PT+Sans+Narrow:400+700|Source+Sans+Pro:200,300,400,600,700,900&amp;subset=all", :rel => "stylesheet", :type => "text/css"}/
    = csrf_meta_tags

    = javascript_include_tag "account", params[:controller]
    = stylesheet_link_tag "account", params[:controller], media: "all"
    - if request.domain == "singaporeswimming.com"
      = render "layouts/header_script"
    -if params[:action] == "group_classes_deatil_print"
      .modal-load
  %body
    - if !admin_user_signed_in?
      = render "/instructor/shared/login"
    - else
      - if (params[:action] == "unpaid_fee_student" || params[:action] == "unregistered_students") && params[:controller] == "instructor/home"
        = render "instructor/shared/percentage_loder"
      = render "instructor/shared/header"
      = yield
      = render "instructor/shared/footer"
:javascript
  $(".mobi-toggler").on("click", function(event) {
    $(".header").find(".header-navigation").toggle(300);            
  });
  $body = $("body");

  $(window).load(function() { $(".modal-load").fadeOut("slow"); });
:css
  .main:after {
    height: 0px !important;
  }
  .modal-load {
    / display:    none;
    position:   fixed;
    z-index:    1000;
    top:        0;
    left:       0;
    height:     100%;
    width:      100%;
    background: rgba( 255, 255, 255, .8 ) 
                url('/assets/select2-spinner.gif') 
                50% 50% 
                no-repeat;
  }

  /* When the body has the loading class, we turn
     the scrollbar off with overflow:hidden */
  body.loading {
      overflow: hidden;   
  }

  /* Anytime the body has the loading class, our
     modal element will be visible */
  body.loading .modal {
      display: block;
  }